QUES : Permutation with spaces

Example:
Input: abc
output:
a b c
  a bc
  ab c
  abc

CODE : 

#include<bits/stdc++.h>
using namespace std;

void subset(string ip,string op)
{
	if(ip.size()==0)
	{
		cout<<op<<"\n";
		return;
	}
	string op1=op,op2=op;
	op1.push_back(' ');
	op1.push_back(ip[0]);
	op2.push_back(ip[0]);
	ip.erase(ip.begin()+0);
	subset(ip,op1);
	subset(ip,op2);
}

int main()
{
	string ip="abc";
	string op=" ";
	subset(ip,op);
}
